<Window x:Class="InstaBot.GeckofxMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InstaBot"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525"  ShowInTaskbar="True">
    <DockPanel LastChildFill="True">
        <StackPanel Orientation="Vertical" DockPanel.Dock="Top">
            <TextBox Name="tbTitle"></TextBox>
            <DockPanel>
                <TextBox Name="txtSleep" DockPanel.Dock="Right" MinWidth="40" VerticalContentAlignment="Center" HorizontalContentAlignment="Right">12000</TextBox>
                <CheckBox DockPanel.Dock="Right" VerticalAlignment="Center" IsChecked="True" Name="cbLikes">LK</CheckBox>
                <CheckBox DockPanel.Dock="Right" VerticalAlignment="Center" IsChecked="False" Name="cbCommenti">CM</CheckBox>
                <Button Name="btStart">Start</Button>
            </DockPanel>
        </StackPanel>
        <Border Name="B" BorderThickness="2" BorderBrush="Gray"/>
    </DockPanel>
    
</Window>
